<div class="row">
      <div class="col s12">
      {% for pic in pictures %}
          <div class="col m4 l4 s12">
          <div class="card timeline-content">
              <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="{{ pic.link }}">
              </div>
              <div class="card-content">
                  <span class="card-title activator "><a class="grey-text text-darken-4" href="">{{ pic.firstname }} {{ pic.lastname }}</a></span>
                  <p style="margin-top: -15px">@{{ pic.username }}</p>
                  <br>
                  <p class="truncate activator" style="cursor: pointer !important;">{{ pic.description }}</p>
                  {%  set tags = pic.tag|split(',') %}
                  <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}
                  </p>
                  <i class="material-icons right" style="cursor: pointer;margin-top: 10px">thumb_up</i>

                  <p style="margin-top: 10px" class="left-align">{{ pic.interval }}</p>

              </div>
              <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4">{{ pic.firstname }} {{ pic.lastname }}<i class="material-icons right">close</i></span>
                  <p style="margin-top: -10px">@{{ pic.username }}</p>
                  <p>{{ pic.description }}</p>
                  {%  set tags = pic.tag|split(',') %}
                  <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}</p>

              </div>
          </div>
          </div>
      {% endfor %}
      </div>
</div>

