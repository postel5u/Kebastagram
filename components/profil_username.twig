{% if erreur == true %}
<p class="red-text">Aucun utilisateur trouvé pour : {{ username }}</p>
{% else %}
    <div class="container">
        <div class="container">
            <div class="col s12 m10  l6 offset-l3">
                <div class="card-panel grey lighten-5 z-depth-1">
                    {% if bool_follow %}
                        <button class="waves-effect waves-blue btn blue right btn_unfollow" id="unfollow_{{uniqid}}">Ne plus suivre</button>

                    {% else %}
                        <button class="waves-effect waves-blue btn blue right btn_follow" id="follow_{{uniqid}}">Suivre</button>
                    {% endif %}
                    <div class="row valign-wrapper">
                        <div class="col s4 m2">
                            <img src="/{{ profil_picture }}" alt="" class="circle responsive-img valign">
                        </div>
                        <div class="col s12 m10">
                            <span class="black-text"><h5>@{{ username }}</h5><p>{{ firstname }} {{ lastname }}</p></span>
                        </div>
                    </div>
                    <div class="row valign-wrapper">
                        <div class="col s12 m12">
                            <div class="col s12 m4 l4 "><a{% if nb_follow >0 %} data-target="modal1" class="modal-trigger" {% endif %}href=""><b><p class="center ">Abonnements</p></b></a><p class="center">{{ nb_follow}}</p></div>
                            <div class="col s12 m4 l4 "><a{% if nb_follower >0 %} data-target="modal2" class="modal-trigger" {% endif %}href=""><b><p class="center">Abonnés</p></b></a><p class="center">{{ nb_follower}}</p></div>
                            <div class="col s12 m4 l4 "><a href="#table_pics"><b><p class="center">Photos</p></b></a><p class="center">{{ nb_pics}}</p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="table_pics">
            <div class="col s12">
                {% for pic in pictures %}
                    <div class="col m4 l4 s12">
                        <div class="card ">
                            <div class="card-image waves-effect waves-block waves-light">
                                <img class="activator" src="/{{ pic.link }}">
                            </div>
                            <div class="card-content">
                                <span class="card-title activator "><a class="grey-text text-darken-4" href="">{{ pic.firstname }} {{ pic.lastname }}</a></span>
                                <p style="margin-top: -15px">@{{ pic.username }}</p>
                                <br>
                                <p class="truncate activator" style="cursor: pointer !important;">{{ pic.description }}</p>
                                {%  set tags = pic.tag|split(',') %}
                                <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}
                                </p>
                                <i class="material-icons right" style="cursor: pointer;margin-top: 10px">thumb_up</i>

                                <p style="margin-top: 10px" class="left-align">{{ pic.interval }}</p>

                            </div>
                            <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4">{{ pic.firstname }} {{ pic.lastname }}<i class="material-icons right">close</i></span>
                                <p style="margin-top: -10px">@{{ pic.username }}</p>
                                <p>{{ pic.description }}</p>
                                {%  set tags = pic.tag|split(',') %}
                                <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}</p>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>Abonnements</h4>
            <ul class="collection ">
                {% for f in follow %}
                    <li class="collection-item avatar">
                        <a href="/profil/{{ f.username }}">
                            <img src="/{{ f.profil_picture }}" alt="" class="circle">
                            <span class="title">@{{ f.username }}</span></a>
                        <p>{{ f.firstname }} {{ f.lastname }}</p>
                        <p>{{ f.postal_code }} {{ f.city }}</p>
                        <a href="/profil/{{ f.username }}" class="secondary-content"><i class="material-icons medium hide-on-small-and-down">send</i></a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-red btn red ">Fermer</a>
        </div>
    </div>
    <!-- Modal Structure -->
    <div id="modal2" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>Abonnés</h4>
            <ul class="collection ">
                {% for fo in follower %}
                    <li class="collection-item avatar">
                        <a href="/profil/{{ fo.username }}"><img src="/{{ fo.profil_picture }}" alt="" class="circle">
                            <span class="title">@{{ fo.username }}</span></a>
                        <p>{{ fo.firstname }} {{ fo.lastname }}</p>
                        <p>{{ fo.postal_code }} {{ fo.city }}</p>
                        <a href="/profil/{{ fo.username }}" class="secondary-content"><i class="material-icons medium hide-on-small-and-down">send</i></a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-red btn red ">Fermer</a>
        </div>
    </div>
{% endif %}