<html lang="fr">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <title>Blue Ocean - Materialize</title>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
</head>

<body>
<div class="container">
    <div class="timeline">
{% for p in pictures %}
            <div class="timeline-event">
                <div class="card timeline-content">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="{{ p.link }}">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator "><a class="grey-text text-darken-4" href="">{{ p.firstname }} {{ p.lastname }}</a></span>
                        <p style="margin-top: -15px">@{{ p.username }}</p>
                        <br>
                        <p class="truncate activator" style="cursor: pointer !important;">{{ p.description }}</p>
                        {%  set tags = p.tag|split(',') %}
                        <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}
                        </p>
                        <i class="material-icons right" style="cursor: pointer;margin-top: 10px">thumb_up</i>

                        <p style="margin-top: 10px" class="left-align">{{ p.interval }}</p>

                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{ p.firstname }} {{ p.lastname }}<i class="material-icons right">close</i></span>
                        <p style="margin-top: -10px">@{{ p.username }}</p>
                        <p>{{ p.description }}</p>
                        {%  set tags = p.tag|split(',') %}
                        <p>{% for t in tags %} <a href="search?recherche=%23{{ t }}">#{{ t }}</a>{% endfor %}</p>

                </div>
                </div>
                <div class="timeline-badge"><a href=""><img src="https://avatars1.githubusercontent.com/u/49341?v=3&s=40" alt="" class="circle responsive-img valign" >
                    </a></div>

            </div>

{% endfor %}

    </div>
    </div>